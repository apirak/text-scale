{
  "dependencies": {
    "@create-figma-plugin/ui": "^2.0.1",
    "@create-figma-plugin/utilities": "^2.0.1",
    "i18next": "^21.8.9",
    "preact": "^10"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@create-figma-plugin/build": "^2.0.1",
    "@create-figma-plugin/tsconfig": "^2.0.1",
    "@figma/plugin-typings": "1.45.0",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4"
  },
  "scripts": {
    "build": "build-figma-plugin --typecheck --minify",
    "watch": "prettier --loglevel error --write '{src, test}/**/*.{ts, css}' && build-figma-plugin --typecheck --watch",
    "test": "jest --watch"
  },
  "figma-plugin": {
    "editorType": [
      "figma"
    ],
    "id": "text-scale",
    "name": "Text Scale",
    "menu": [
      {
        "name": "Open UI",
        "main": "src/main.ts",
        "ui": "src/ui.tsx"
      },
      "-",
      {
        "name": "Large",
        "main": {
          "handler": "toLarge",
          "src": "src/updateText.ts"
        }
      },
      {
        "name": "XXLarge",
        "main": {
          "handler": "toXXLarge",
          "src": "src/updateText.ts"
        }
      }
    ],
    "relaunchButtons": {
      "figma-i18next": {
        "name": "Text Scale",
        "main": "src/updateText.ts"
      }
    }
  }
}
